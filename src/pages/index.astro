---
import Layout from "@/layouts/Layout.astro";
import Logo from "@/assets/losangeleslogo.png";
import BGHero from "@/assets/bgHero.jpg";
---

<style>
	@import url(@/global/homepage/css/hamburger-menu.css);
	@import url(@/global/homepage/css/header.css);
	@import url(@/global/homepage/css/hero.css);

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		height: 100vh;
		max-width: 1920px;
		margin: 0 auto;
		overflow-x: hidden;
		color: white;
		font-family: "GTA BOLD";
	}
	
	.content {
		height: 150vh;
		background: linear-gradient(#000, #222);
		padding: 2rem;
	}
	
</style>

<Layout>
	<section class="hero">
		<div class="siren-lights" style="z-index: 3;"></div>
		<img class="bgHero" src={BGHero.src} style="z-index: 2;"/>
		<img class="hero-title floating" src={Logo.src} style="z-index: 4;"/>
	</section>

	<section class="content">
		<h2>Bienvenido a la experiencia más brutal</h2>
		<p>Desliza para descubrir lo que te espera.</p>
	</section>
	<script>
		import gsap from "gsap";
		import ScrollTrigger from "gsap/ScrollTrigger";

		gsap.registerPlugin(ScrollTrigger);

		window.addEventListener("DOMContentLoaded", () => {
			// Animación hero image
			gsap.to(".bgHero", {
				scale: 1.4,
				opacity: 0,
				filter: "blur(10px)",
				scrollTrigger: {
					trigger: ".hero",
					start: "top top",
					end: "bottom top",
					scrub: true,
				},
			});

			// Entrada texto
			gsap.to(".hero-title", {
				opacity: 1,
				y: 0,
				duration: 1.5,
				delay: 0.5,
				ease: "power3.out",
			});

			// Parallax efecto en título al hacer scroll
			gsap.to(".hero-title", {
				y: -100,
				scrollTrigger: {
					trigger: ".hero",
					start: "top top",
					end: "bottom top",
					scrub: true,
				},
			});
		});
	</script>
</Layout>
